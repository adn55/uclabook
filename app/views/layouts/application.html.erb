<!DOCTYPE html>
<html>
<head>
  <title>Uclabook</title>

  <%= stylesheet_link_tag    '/css/bootstrap.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag '/js/application.js', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
<div class="container">
<a href="#" class="navbar-brand">Uclabook</a>
<ul class="nav navbar-nav">
	<li class="active">
		<%= link_to "Status", timeline_path %>
	</li>
</ul>

<ul class="nav navbar-nav pull-right">

<% if user_signed_in? %>
<li><%= link_to current_user.nombre_completo, edit_user_registration_path %></li>

<li><%= link_to "Cerrar Sesion", destruir_path %></li>

<% else %>
<li><%= link_to "registrar", registrar_path %></li>

<li><%= link_to "Iniciar Sesion", comenzar_path %></li>

<% end %>
</ul>

</div>
</div>

<div class="container">

<% flash.each do | type, message |%>

	<div class="alert <%= flash_class type %>">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true" >x</button>
	<%= message %>
	</div>
	<% end %>

<%= yield %>
</div>

</body>
</html>
